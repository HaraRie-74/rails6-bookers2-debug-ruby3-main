<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info',user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book_new: @book_new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image(100,100) %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <td>
            <% if @book.favorited_by?(current_user) %>
              <%= link_to book_favorites_path(@book.id),method: :delete do %>
                <i class="fas fa-heart" style="color:#ff0000"></i><%= @book.favorites.count %>
              <% end %>
            <% else %>
              <%= link_to book_favorites_path(@book.id),method: :post do %>
                <i class="fas fa-heart" style="color:#0000ff"></i><%= @book.favorites.count %>
              <% end %>
            <% end %>
          </td>
          <td><%= "コメント数:#{@book.book_comments.count}" %></td>
          <% if @book.user==current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% else %>
            <td colspan="2"></td>
          <% end %>
        </tr>
      </table>
      <div class='row'>
        <div class='col ml-5'>
          <% @book.book_comments.each do |comment| %>
            <div>
              <%= image_tag comment.user.get_profile_image(80,80) %>
              <%= comment.comment %>
              <% if comment.user==current_user %>
                <%= link_to "Destroy",book_book_comment_path(comment.book_id,comment.id),class:"btn btn-danger btn-sm",method: :delete %>
              <% end %>
              </br ><%= link_to comment.user.name,user_path(comment.user_id) %>
            </div>
          <% end %>
          <div>
            <%= form_with model:[@book,@comment],url:book_book_comments_path(@book.id),method: :post do |f| %>
              <%= f.text_area:comment,  class:"form-control", rows:"7", placeholder:"コメントをここに" %></br >
              <%= f.submit "送信"%>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>