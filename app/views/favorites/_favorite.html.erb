<% if book.favorited_by?(current_user) %>
  <%= link_to book_favorites_path(book.id),method: :delete,remote:true do %>
    <i class="fas fa-heart" style="color:#ff0000"></i><%= book.favorites.count %>
  <% end %>
<% else %>
  <%= link_to book_favorites_path(book.id),method: :post,remote:true do %>
    <i class="fas fa-heart" style="color:#0000ff"></i><%= book.favorites.count %>
  <% end %>
<% end %>