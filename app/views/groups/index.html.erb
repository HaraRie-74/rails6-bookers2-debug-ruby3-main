<h1>Groups</h1>


<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'layouts/errors',obj:@book %>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book_new: @book_new %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'index', books: @books%>
    </div>
  </div>
</div>



<table>
  <thead>
    <tr>
      <th>グループ名</th>
      <th>紹介文</th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td>
          <%= image_tag group.get_image(50,50) %>
        </td>
        <td>
          <%= group.name %>
        </td>
        <td>
          <%= group.introduction %>
         </td>
        <td>
          <%= link_to "Edit",edit_group_path(group.id),class:"btn btn-success" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>