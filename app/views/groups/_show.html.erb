<table class="table table-borderd">
  <tbody>
    <tr>
      <td>
        <%= image_tag group.get_image(50,50) %>
      </td>
      <td>
        <%= group.name %>
      </td>
      <td>
        <%= group.introduction %>
      </td>
      <td>
        <% if group.owner_id==current_user.id %>
          <%= link_to "Edit",edit_group_path(group.id),class:"btn btn-success" %>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>