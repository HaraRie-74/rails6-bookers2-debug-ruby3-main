<%= form_with model:group do |f| %>
  <div class="form-group">
    <label for="grop-name">グループ名</label></br >
    <%= f.text_field :name,class: "form-control name" %>
  </div>
  <div class="form-group">
    <label for="group_introduction">紹介文</label></br >
    <%= f.text_area :introduction,class: "form-control introduction" %>
  </div>
  <div class="form-group">
    <label for="group_image">グループ画像</label></br >
    <%= f.file_field :image,class: "form-control-file user_image", accept: 'image/*'%>
  </div>
  <div class="form-group">
    <%= f.submit class:"btn btn-info" %>
  </div>
<% end %>