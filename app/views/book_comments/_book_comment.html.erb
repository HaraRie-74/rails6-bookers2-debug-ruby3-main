<% book.book_comments.each do |comment| %>
  <div>
    <%= image_tag comment.user.get_profile_image(80,80) %>
    <%= comment.comment %>
    <% if comment.user==current_user %>
      <%= link_to "Destroy",book_book_comment_path(comment.book_id,comment.id),remote:true,class:"btn btn-danger btn-sm",method: :delete %>
      <% end %>
    </br ><%= link_to comment.user.name,user_path(comment.user_id) %>
  </div>
<% end %>
<div>
  <%= form_with model:[book,comment],url:book_book_comments_path(book.id),method: :post,local:false do |f| %>
    <%= f.text_area:comment,  class:"form-control", rows:"7", placeholder:"コメントをここに" %></br >
    <%= f.submit "送信"%>
  <% end %>
</div>